<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:spacing="8dp"
        tools:context=".HistorialClinicaActivity">

        <!-- Título de Datos Generales -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos Generales"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="12dp" />

        <!-- Campos de entrada -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextEdad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edad"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextSexo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sexo"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo Electrónico"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Título de Contactos de Emergencia -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contactos de Emergencia"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <!-- Campos de contacto -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextContacto1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contacto 1"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextContacto2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contacto 2"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Título de Antecedentes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antecedentes"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <!-- Campos de antecedentes -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextEnfermedadesPrevias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enfermedades Previas"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextAlergias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alergias"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextCirugias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cirugías Anteriores"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextMedicamentos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Medicamentos Actuales"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextVacunas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vacunas"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Título de Signos Vitales -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signos Vitales"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <!-- Campos de signos vitales -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextPresionArterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Presión Arterial"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextFrecuenciaCardiaca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Frecuencia Cardíaca"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextTemperaturaCorporal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Temperatura Corporal"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Campo Peso -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPeso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Peso"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:padding="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo Altura -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextAltura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Altura"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:padding="12dp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Botón de guardar -->
        <Button
            android:id="@+id/buttonGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:text="Guardar"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent" />
    </LinearLayout>
</ScrollView>