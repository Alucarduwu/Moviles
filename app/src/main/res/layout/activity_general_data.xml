<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Título "Formulario" -->

    <!-- Campo para el nombre -->

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="181dp"
        android:layout_height="25dp"
        android:layout_gravity="left"
        android:layout_marginTop="164dp"
        android:fontFamily="sans-serif-medium"
        android:text="Datos generales"
        android:textColor="#494B4F"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Nombre"
        android:importantForAccessibility="yes"
        android:labelFor="@id/nameEditText"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_text_background"
        android:backgroundTint="#D9D9D9"
        android:paddingHorizontal="12dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:fontFamily="sans-serif"/>

    <!-- Campo para la edad -->
    <EditText
        android:id="@+id/ageEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Edad"
        android:inputType="number"
        android:importantForAccessibility="yes"
        android:labelFor="@id/ageEditText"
        app:layout_constraintTop_toBottomOf="@id/nameEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#D9D9D9"
        android:background="@drawable/edit_text_background"
        android:paddingHorizontal="12dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:fontFamily="sans-serif"/>

    <!-- Spinner para seleccionar el género -->
    <Spinner
        android:id="@+id/genderSpinner"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:importantForAccessibility="yes"
        android:labelFor="@id/genderSpinner"
        app:layout_constraintTop_toBottomOf="@id/ageEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#D9D9D9"
        android:background="@drawable/edit_text_background"
        android:paddingHorizontal="12dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:fontFamily="sans-serif"/>

    <!-- Botón para proceder a la siguiente actividad -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="187dp"
        android:layout_height="40dp"
        android:text="Siguiente"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/genderSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
