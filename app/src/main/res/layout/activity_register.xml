<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <!-- Título "Regístrate" (movido hacia arriba) -->

        <!-- Botones de Google y Facebook (Arriba) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif-medium"
            android:text="Regístrate con:"
            android:textColor="#494B4F"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- Botón de Google -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/button_background"
                android:backgroundTint="#DF9999"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:elevation="4dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/google"
                    android:contentDescription="Google Icon" />
            </LinearLayout>

            <!-- Botón de Facebook -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/button_background"
                android:backgroundTint="#8494B4"
                android:gravity="center"
                android:elevation="4dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/facebook"
                    android:contentDescription="Facebook Icon" />
            </LinearLayout>
        </LinearLayout>

        <!-- Campos de nombre, correo y contraseña con iconos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:backgroundTint="#D9D9D9"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="Name Icon"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Nombre"
                android:background="@null"
                android:paddingHorizontal="12dp"
                android:textColor="#494B4F"
                android:textSize="16sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:backgroundTint="#D9D9D9"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/sobre"
                android:contentDescription="Email Icon"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Correo electrónico"
                android:background="@null"
                android:paddingHorizontal="12dp"
                android:textColor="#333333"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:backgroundTint="#D9D9D9"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/cerrar"
                android:contentDescription="Password Icon"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Contraseña"
                android:background="@null"
                android:paddingHorizontal="12dp"
                android:textColor="#333333"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:inputType="textPassword" />
        </LinearLayout>

        <!-- Barra divisoria con el punto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#E0E0E0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="o"
                android:textColor="#9D9D9D"
                android:layout_marginHorizontal="8dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#E0E0E0" />
        </LinearLayout>

        <!-- Botón de registro -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:text="Siguiente"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <!-- Texto de "¿Ya tienes cuenta?" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Ya tienes cuenta?"
            android:textColor="#494B4F"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Enlace "Inicia sesión" -->
        <TextView
            android:id="@+id/loginTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicia sesión"
            android:textColor="#441780"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center" />
    </LinearLayout>
</ScrollView>
