<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Título "Inicia sesión con" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_gravity="left"
            android:text="Inicia sesión con"
            android:textColor="#494B4F"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="24dp" />

        <!-- Botones de Google y Facebook -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- Botón de Google -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/button_background"
                android:backgroundTint="#F99999"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:elevation="4dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/google"
                    android:contentDescription="Google Icon" />
            </LinearLayout>

            <!-- Botón de Facebook -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:backgroundTint="#8494B4"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Facebook Icon"
                    android:src="@drawable/facebook" />
            </LinearLayout>
        </LinearLayout>

        <!-- Barra divisoria con el punto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#E0E0E0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="o"
                android:textColor="#9D9D9D"
                android:layout_marginHorizontal="8dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#E0E0E0" />
        </LinearLayout>

        <!-- Campos de correo electrónico y contraseña con iconos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:backgroundTint="#D9D9D9"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/sobre"
                android:contentDescription="Email Icon"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/emailEditText"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Correo electrónico"
            android:background="@null"
            android:paddingHorizontal="12dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:backgroundTint="#D9D9D9"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/cerrar"
                android:contentDescription="Password Icon"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/passwordEditText"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Contraseña"
            android:background="@null"
            android:paddingHorizontal="12dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:inputType="textPassword" />
        </LinearLayout>

        <!-- Texto de "¿Olvidaste tu contraseña?" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Olvidaste tu contraseña?"
            android:textColor="#494B4F"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Botón "Siguiente" -->

        <!-- Texto "¿No estás registrado? Crea una cuenta" -->
        <Button
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#441780"
            android:fontFamily="sans-serif-medium"
            android:text="Siguiente"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿No estás registrado?"
            android:textColor="#494B4F"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Enlace "Crea una cuenta" -->
        <TextView
            android:id="@+id/createAccountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crea una cuenta"
        android:textColor="#441780"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center" />
    </LinearLayout>
</ScrollView>
