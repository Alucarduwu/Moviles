<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodegradado">

    <!-- Contenedor del logo -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <!-- Icono de VitaCore -->
        <ImageView
            android:layout_width="63dp"
            android:layout_height="65dp"
            android:src="@drawable/vitacoreicon" />

        <!-- Texto VitaCore debajo del icono -->
        <TextView
            android:layout_marginTop="8dp"
            android:text="VitaCore"
            android:textSize="54dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" /> <!-- AjustÃ© la altura para que sea el espacio necesario -->

    </LinearLayout>

</RelativeLayout>
